@{
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<h1>@ViewBag.Name movies:</h1>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Author
        </th>
    </tr>
    @foreach (var el in ViewBag.Movies)
    {
        <tr>
            <td><a href="@Url.Action("MovieForm", "Home", new {title = @el.Title})">@el.Title</a></td>
            <td>@el.Description</td>
            <td>@el.Author</td>
        </tr>
    }
</table>